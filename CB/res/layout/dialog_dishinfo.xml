<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/layout_main"
  android:orientation="vertical"
  android:padding="10px"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
    <RelativeLayout
    android:layout_weight="8"
    android:orientation="horizontal"
	android:layout_height="wrap_content"
	android:layout_width="fill_parent">
		<LinearLayout
		android:gravity="left"
		android:layout_alignParentLeft="true"
	    android:orientation="horizontal"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content">
			<TextView android:id="@+id/view_name"
			android:textStyle="bold"
			android:text="name"
			android:textSize="20px"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"/>
		</LinearLayout>
		<LinearLayout
		android:layout_alignParentRight="true"
		android:gravity="right"
	    android:orientation="horizontal"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content">
			<TextView android:id="@+id/view_price"
			android:text="price"
			android:textStyle="bold"
			android:textSize="20px"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"/>
		</LinearLayout>
	</RelativeLayout>

	<LinearLayout
	android:layout_weight="8"
	android:layout_height="wrap_content"
	android:layout_width="fill_parent">
		<TextView android:id="@+id/view_summary"
		android:text="summary"
		android:textStyle="bold"
		android:textSize="20px"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"/>
	</LinearLayout>

	<LinearLayout
	android:layout_weight="250"
	android:layout_gravity="center_vertical"
	android:layout_height="wrap_content"
	android:layout_width="fill_parent">
		<ScrollView
		android:fillViewport="true"
		android:layout_height="fill_parent"
		android:layout_width="fill_parent">
			<TextView android:id="@+id/view_detail"
			android:text="detail"
			android:textSize="20px"
			android:textStyle="bold"
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"/>
		</ScrollView>
	</LinearLayout>

	<LinearLayout
	android:layout_weight="8"
	android:layout_gravity="bottom"
	android:gravity="right"
	android:layout_height="wrap_content"
	android:layout_width="fill_parent">
		<com.android.cb.view.CBDialogButton android:id="@+id/button_order"
		android:text="@string/dishinfo_order"
		android:layout_marginRight="5px"
		android:layout_height="wrap_content"
		android:layout_width="100px"/>

		<com.android.cb.view.CBDialogButton android:id="@+id/button_quit"
		android:text="@string/dishinfo_quit"
		android:layout_height="wrap_content"
		android:layout_width="100px"/>
	</LinearLayout>
</LinearLayout>
